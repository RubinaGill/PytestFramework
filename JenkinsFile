pipeline {
    agent any

    environment {
        IN_DOCKER = "true"
        REPORT_DIR = "reports"
        REPORT_FILE = "report.html"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: main, url: 'https://github.com/RubinaGill/PytestFramework.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üî® Building Docker image..."
                sh 'docker build -t bdd-tests .'
            }
        }

        stage('Run Tests') {
            steps {
                echo "üöÄ Running tests inside Docker..."
                sh 'docker run --rm -v "$PWD:/app" -e IN_DOCKER=$IN_DOCKER bdd-tests'
            }
        }

        stage('Archive Reports') {
            steps {
                echo "üìÅ Archiving test report..."
                publishHTML(target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: "${REPORT_DIR}",
                    reportFiles: "${REPORT_FILE}",
                    reportName: "BDD Test Report"
                ])
            }
        }
    }

    post {
        always {
            echo "‚úÖ Pipeline complete"
        }
        failure {
            echo "‚ùå Tests failed"
        }
    }
}
